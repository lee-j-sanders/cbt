echo "----- bootstrap -----"
cephadm --image quay.io/ceph/ceph:$1 bootstrap --single-host-defaults --log-to-file --mon-ip 9.71.45.49 --allow-mismatched-release --skip-dashboard

echo "---- zaposds ----"
sleep 10
/root/cephscripts/zaposds

echo "---- make setup ----"
sleep 10 
cephadm shell </root/cephscripts/make_ec_setup.alex

echo "---- turn off caches etc ----"
sleep 5
/root/configceph2
/root/showscheduler.sh


