typeset -i numvols=1
typeset -i endvol=$numvols-1

hostname=$(hostname -f)
volsize=420000

for i in $(seq 0 $endvol)
do
   volname="cbt-librbdfio-${hostname}-${i}"
   cephadm shell rbd rm rbd_replicated/$volname
   cephadm shell rbd create --pool rbd_replicated --data-pool rbd_erasure --size $volsize $volname
done

